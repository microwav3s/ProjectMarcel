<?xml version="1.0" encoding="UTF-8"?>
<project name="module_projectmarcel" default="compile.module.projectmarcel">
  <dirname property="module.projectmarcel.basedir" file="${ant.file.module_projectmarcel}"/>
  
  <property name="module.jdk.home.projectmarcel" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.projectmarcel" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.projectmarcel" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.projectmarcel" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="projectmarcel.output.dir" value="${module.projectmarcel.basedir}/out/production/ProjectMarcel"/>
  <property name="projectmarcel.testoutput.dir" value="${module.projectmarcel.basedir}/out/test/ProjectMarcel"/>
  
  <path id="projectmarcel.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="projectmarcel.module.production.classpath">
    <path refid="${module.jdk.classpath.projectmarcel}"/>
    <path refid="library.lucene-test-framework-7.1.0.classpath"/>
    <path refid="library.lucene-sandbox-7.1.0.classpath"/>
    <path refid="library.lucene-misc-7.1.0.classpath"/>
    <path refid="library.lucene-core-7.1.0.classpath"/>
  </path>
  
  <path id="projectmarcel.runtime.production.module.classpath">
    <pathelement location="${projectmarcel.output.dir}"/>
    <path refid="library.lucene-test-framework-7.1.0.classpath"/>
    <path refid="library.lucene-sandbox-7.1.0.classpath"/>
    <path refid="library.lucene-misc-7.1.0.classpath"/>
    <path refid="library.lucene-core-7.1.0.classpath"/>
  </path>
  
  <path id="projectmarcel.module.classpath">
    <path refid="${module.jdk.classpath.projectmarcel}"/>
    <pathelement location="${projectmarcel.output.dir}"/>
    <path refid="library.lucene-test-framework-7.1.0.classpath"/>
    <path refid="library.lucene-sandbox-7.1.0.classpath"/>
    <path refid="library.lucene-misc-7.1.0.classpath"/>
    <path refid="library.lucene-core-7.1.0.classpath"/>
  </path>
  
  <path id="projectmarcel.runtime.module.classpath">
    <pathelement location="${projectmarcel.testoutput.dir}"/>
    <pathelement location="${projectmarcel.output.dir}"/>
    <path refid="library.lucene-test-framework-7.1.0.classpath"/>
    <path refid="library.lucene-sandbox-7.1.0.classpath"/>
    <path refid="library.lucene-misc-7.1.0.classpath"/>
    <path refid="library.lucene-core-7.1.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.projectmarcel">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.projectmarcel">
    <patternset refid="excluded.from.module.projectmarcel"/>
  </patternset>
  
  <path id="projectmarcel.module.sourcepath">
    <dirset dir="${module.projectmarcel.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.projectmarcel" depends="compile.module.projectmarcel.production,compile.module.projectmarcel.tests" description="Compile module ProjectMarcel"/>
  
  <target name="compile.module.projectmarcel.production" depends="register.custom.compilers" description="Compile module ProjectMarcel; production classes">
    <mkdir dir="${projectmarcel.output.dir}"/>
    <javac2 destdir="${projectmarcel.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.projectmarcel}/javac">
      <compilerarg line="${compiler.args.projectmarcel}"/>
      <bootclasspath refid="projectmarcel.module.bootclasspath"/>
      <classpath refid="projectmarcel.module.production.classpath"/>
      <src refid="projectmarcel.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.projectmarcel"/>
    </javac2>
    
    <copy todir="${projectmarcel.output.dir}">
      <fileset dir="${module.projectmarcel.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.projectmarcel.tests" depends="register.custom.compilers,compile.module.projectmarcel.production" description="compile module ProjectMarcel; test classes" unless="skip.tests"/>
  
  <target name="clean.module.projectmarcel" description="cleanup module">
    <delete dir="${projectmarcel.output.dir}"/>
    <delete dir="${projectmarcel.testoutput.dir}"/>
  </target>
</project>